<%= form_for [refinery, :bookings_admin, @booking] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @booking,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :start_date -%>
    <%= f.date_select :start_date -%>
  </div>

  <div class='field'>
    <%= f.label :end_date -%>
    <%= f.date_select :end_date -%>
  </div>

  <div class='field'>
    <%= f.label :contact_name -%>
    <%= f.text_field :contact_name -%>
  </div>

  <div class='field'>
    <%= f.label :contact_number -%>
    <%= f.text_field :contact_number -%>
  </div>

  <div class='field'>
    <%= f.label :contact_email -%>
    <%= f.text_field :contact_email -%>
  </div>

  <div class='field'>
    <%= f.label :confirmed -%>
    <%= f.check_box :confirmed, :checked => @booking[:confirmed] -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.bookings.admin.bookings.booking'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @booking.contact_name) -%>
<% end -%>
