<% content_for :body_content_title do %>
  <%= @booking.contact_name %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Start Date</h1>
    <p>
      <%=raw @booking.start_date %>
    </p>
  </section>
  <section>
    <h1>End Date</h1>
    <p>
      <%=raw @booking.end_date %>
    </p>
  </section>
  <section>
    <h1>Contact Name</h1>
    <p>
      <%=raw @booking.contact_name %>
    </p>
  </section>
  <section>
    <h1>Contact Number</h1>
    <p>
      <%=raw @booking.contact_number %>
    </p>
  </section>
  <section>
    <h1>Contact Email</h1>
    <p>
      <%=raw @booking.contact_email %>
    </p>
  </section>
  <section>
    <h1>Confirmed</h1>
    <p>
      <%=raw @booking.confirmed %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="bookings">
      <% @bookings.each do |booking| %>
        <li>
          <%= link_to booking.contact_name, refinery.bookings_booking_path(booking) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
